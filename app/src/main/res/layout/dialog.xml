<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp">

    <TextView
        android:id="@+id/tv_dial_title"
        android:layout_width="100dp"
        android:layout_height="50sp"
        android:background="#e8e8e8e8"
        android:gravity="center"
        android:text="타이틀"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_dial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_dial_title"
        android:layout_marginLeft="10dp"
        android:hint="타이틀 변경"
        android:minWidth="200dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_dial_writer"
        android:layout_width="100dp"
        android:layout_height="50sp"
        android:layout_below="@+id/tv_dial_title"
        android:layout_marginTop="5dp"
        android:background="#e8e8e8e8"
        android:gravity="center"
        android:text="브랜드"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_dial_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_dial_title"
        android:layout_below="@+id/et_dial_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="브랜드 변경"
        android:minWidth="200dp"
        android:textSize="20sp" />

